<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background1"
    android:fillViewport="true" >

    <RelativeLayout
        style="@style/basicRelativeLayoutOverBackground"
        android:layout_width="wrap_content" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/createRideForm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <!-- General Details -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@layout/common_table_background" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:fontFamily="Arial Bold"
                            android:text="General Details:"
                            android:textColor="#000"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Name of Ride Label -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp" >

                        <TextView
                            style="@style/TextViewForLabels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:text="Ride Name" />

                        <TextView
                            android:id="@+id/textViewRideDetailsRideName"
                            style="@style/EditTextViewFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50" />
                    </LinearLayout>

                    <!-- Source Label -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextViewForLabels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:text="Source" />

                        <TextView
                            android:id="@+id/textViewRideDetailsSource"
                            style="@style/EditTextViewFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50" />
                    </LinearLayout>

                    <!-- Destination Label -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextViewForLabels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:text="Destination" />

                        <TextView
                            android:id="@+id/textViewRideDetailsDestination"
                            style="@style/EditTextViewFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50" />
                    </LinearLayout>

                    <!-- Date Label -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextViewForLabels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:text="Date" />

                        <TextView
                            android:id="@+id/textViewRideDetailsDate"
                            style="@style/EditTextViewFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50" />
                    </LinearLayout>

                    <!-- Time Label -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextViewForLabels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:text="Time" />

                        <TextView
                            android:id="@+id/textViewRideDetailsTime"
                            style="@style/EditTextViewFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50" />
                    </LinearLayout>

                    <!-- Creator Label -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/TextViewForLabels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:text="Creator" />

                        <TextView
                            android:id="@+id/textViewRideDetailsCreator"
                            style="@style/EditTextViewFont"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnViewParticipants"
                        style="@style/Button"
                        android:text="Participants" />
                </LinearLayout>

                <!-- Personal Statistics -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@layout/common_table_background" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="40sp"
                            android:layout_weight="1"
                            android:fontFamily="Arial Bold"
                            android:text="Personal Stats:"
                            android:textColor="#000"
                            android:textSize="21sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <LinearLayout
                            android:id="@+id/userActivityDetails"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <!-- Distance -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    style="@style/TextViewForLabels"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:text="Dist Covered" />

                                <TextView
                                    android:id="@+id/textViewPastRideDistanceCovered"
                                    style="@style/EditTextViewFont"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50" />
                            </LinearLayout>

                            <!-- Avg Speed -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    style="@style/TextViewForLabels"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:text="Avg Speed" />

                                <TextView
                                    android:id="@+id/textViewPastRideAverageSpeed"
                                    style="@style/EditTextViewFont"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50" />
                            </LinearLayout>

                            <!-- Time taken -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    style="@style/TextViewForLabels"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:text="Ride Time" />

                                <TextView
                                    android:id="@+id/textViewPastRideTime"
                                    style="@style/EditTextViewFont"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50" />
                            </LinearLayout>

                            <!-- Calories -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    style="@style/TextViewForLabels"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:text="Cal." />

                                <TextView
                                    android:id="@+id/textViewPastRideCalories"
                                    style="@style/EditTextViewFont"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50" />
                            </LinearLayout>

                            <!-- Cadence -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    style="@style/TextViewForLabels"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:text="Cadence" />

                                <TextView
                                    android:id="@+id/textViewPastRideCadence"
                                    style="@style/EditTextViewFont"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50" />
                            </LinearLayout>

                            <!-- HeartRate -->

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    style="@style/TextViewForLabels"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50"
                                    android:text="Heart Rate" />

                                <TextView
                                    android:id="@+id/textViewPastRideHeartRate"
                                    style="@style/EditTextViewFont"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".50" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/textViewPastRideDetailsError"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                style="@style/EditTextViewFont"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".50"
                                android:text="Oops! Looks like you missed this ride!!!" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/rideDetailsSpinner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/TextViewFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading ride details..." >
            </TextView>

            <ProgressBar
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" >
            </ProgressBar>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>