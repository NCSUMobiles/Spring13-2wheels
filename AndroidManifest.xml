<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spinningwellness"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.BaseActivity"
            android:label="@string/title_activity_base" 
            android:background="@drawable/background1"
        	android:fillViewport="true" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.CoverPageActivity"
            android:label="Spinning Wellness" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.CreateRideActivity"
            android:label="@string/title_activity_create_new_ride" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.JoinRidesActivity"
            android:label="@string/title_activity_join" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.LeaderBoardActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.LogRideDetailsActivity"
            android:label="@string/title_activity_log_ride_details" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.LoginActivity"
            android:label="Spinning Wellness" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.MyPastRidesActivity"
            android:label="@string/title_activity_my_past_rides" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.RecordRideStatsActivity"
            android:label="@string/title_activity_base" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.ViewParticipantsForARideActivity"
            android:label="@string/title_activity_view_member" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.ViewRideDetailsActivity"
            android:label="@string/title_activity_view_rides" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>