<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spinningwellness"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_CALENDAR" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.BaseActivity"
            android:background="@drawable/background1"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:fillViewport="true"
            android:label="@string/title_activity_base"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.CoverPageActivity"
            android:label="Spinning Wellness"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.CreateRideActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_create_new_ride"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.JoinRidesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_join"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.LeaderBoardActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_base"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.LogRideDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_log_ride_details"
            android:noHistory="true"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Spinning Wellness"
            android:noHistory="true"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.MyPastRidesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_my_past_rides"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.RecordRideStatsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_base"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.ViewParticipantsForARideActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_view_member"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.ViewRideDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_view_rides"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.ViewPastRideDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_view_past_rides"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ncsu.edu.spinningwellness.activities.RegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_view_past_rides"
            android:noHistory="true"
            android:screenOrientation="portrait" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>